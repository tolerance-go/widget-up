{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist",
    "lib": ["ES2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "./typings.d.ts", "types/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
