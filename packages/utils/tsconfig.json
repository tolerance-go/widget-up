{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "lib": ["ES2017", "dom"],
    "baseUrl": ".", // 基本目录设置为项目根目录
    "paths": {
      "@/*": ["*"] // 将 @ 符号映射到根目录
    }
  },
  "include": ["src/**/*", "./typings.d.ts", "types/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
