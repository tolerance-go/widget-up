{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "lib": ["ES2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "./typings.d.ts",
    "types/**/*",
    "__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
