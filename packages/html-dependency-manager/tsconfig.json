{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "react",
    "lib": ["DOM", "ES2019"],
    "declaration": true,
    "declarationDir": "dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "types/**/*", "__tests__/**/*"]
}
