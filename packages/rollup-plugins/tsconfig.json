{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "lib": ["ES2017", "dom"]
  },
  "include": ["src/**/*", "./typings.d.ts", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
